<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/albumitemimage" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"/>


    <TextView
            android:text="TextView"
            android:layout_width="0dp" android:paddingLeft="4dp"
            android:layout_height="20dp" android:textSize="12sp"
            android:background="@android:color/black" android:alpha="0.5"
            android:id="@+id/foldername_text" android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/size_text"/>

    <TextView
            android:text="TextView" android:paddingRight="8dp"
            android:layout_width="wrap_content"
            android:background="@android:color/black" android:alpha="0.5"
            android:layout_height="20dp" android:textSize="12sp"
            android:id="@+id/size_text" android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>