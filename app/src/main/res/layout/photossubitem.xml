<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp" app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/photoitemimage" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="1dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="1dp" app:layout_constraintBottom_toBottomOf="parent"/>

    <View android:layout_width="0dp" android:layout_height="0dp" android:id="@+id/black_view"
            app:layout_constraintTop_toTopOf="@id/photoitemimage" app:layout_constraintBottom_toBottomOf="@id/photoitemimage"
            app:layout_constraintStart_toStartOf="@id/photoitemimage" app:layout_constraintEnd_toEndOf="@id/photoitemimage"
            android:background="@android:color/black" android:alpha="0.3" android:visibility="gone"/>

    <ImageView
            android:layout_width="wrap_content" android:alpha="1.5"
            android:layout_height="wrap_content" app:srcCompat="@drawable/checkicon"
            android:id="@+id/check_icon_image" app:layout_constraintStart_toStartOf="@id/photoitemimage"
            app:layout_constraintEnd_toEndOf="@id/photoitemimage" app:layout_constraintTop_toTopOf="@id/photoitemimage"
            app:layout_constraintBottom_toBottomOf="@id/photoitemimage" android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>