<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">


    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textColor="@android:color/black"
            android:id="@+id/recyclerhead" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="14sp"
    />

    <com.mlsdev.animatedrv.AnimatedRecyclerView
            android:layout_width="0dp" android:id="@+id/photos_sub_recyclerview"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerhead"
            app:animationDuration="600"
            android:nestedScrollingEnabled="false"
            app:layoutAnimation="@anim/layout_animation_random_scale"
            app:layoutManagerOrientation="vertical"
            app:gridLayoutManagerColumns="3"
            app:layoutManagerReverse="false"
            android:isScrollContainer="false"
            app:layoutManagerType="grid"/>
</android.support.constraint.ConstraintLayout>